{% extends 'base.html.twig' %}

{% block title %}Edytuj: {{ product.name }}{% endblock %}

{% block body %}
<div class="page-header">
    <h1>Edytuj produkt</h1>
    <div class="btn-group">
        <a href="{{ path('catalog_product_show', {id: product.id}) }}" class="btn btn-secondary">‚Üê Anuluj</a>
    </div>
</div>

{% for flash in app.flashes('success') %}
    <div class="alert alert-success">{{ flash }}</div>
{% endfor %}

<div class="section">
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
    {{ form_end(form) }}
</div>
{% endblock %}
